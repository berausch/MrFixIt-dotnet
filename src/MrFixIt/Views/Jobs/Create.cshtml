@{

}

@model MrFixIt.Models.Job

@using System.Security.Claims
<div class="container" id="create-middle">
    <h2>Create new Job</h2>
    <hr />

    @if (User.Identity.IsAuthenticated)
    {

        <h4>Add a new job</h4>
        @using (Html.BeginForm())
        {
            @Html.LabelFor(model => model.Title)
            @Html.TextBoxFor(model => model.Title, new { @required = "true" })
            @Html.LabelFor(model => model.Description)
            @Html.TextBoxFor(model => model.Description, new { @required = "true" })
            <input type="submit" value="Add new job" />
        }
    }
    else
    {

        <img src="~/img/fix-it-no.png" class="logo3" alt="Mr.Fix-it with Oh no face" />
        <br />
        <h2>Oh No!</h2>
        <br />
        <h3>You must have an Account to Create a Job</h3>
        <br />

        <h4>Make an Account with Mr Fix-It Today!</h4>
        <p> @Html.ActionLink("Register", "Register", "Account")</p>

        <br />
        <h4>Already have an Account?</h4>
        <p>@Html.ActionLink("Log In", "Login", "Account")</p>
    }
    <br />
    <p>@Html.ActionLink("Back to list", "Index")</p>
</div>